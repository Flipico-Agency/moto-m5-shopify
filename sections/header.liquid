{% stylesheet %}

  .navbar7_item-text,
  .navbar7_item-right {
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    display: flex;
  }

  .navbar7_dropdown-link {
    grid-column-gap: 0.75rem;
    grid-row-gap: 0;
    color: var(--color--black);
    grid-template-rows: auto;
    grid-template-columns: max-content 1fr;
    grid-auto-columns: 1fr;
    align-items: center;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    text-decoration: none;
    transition: color 0.2s ease-in-out;
    display: flex;
  }

  .navbar7_dropdown-link:hover {
    color: var(--color-red--red600);
    font-weight: 600;
  }

  .navbar7_dropdown-link:active {
    color: var(--color-red--red800);
  }

  .navbar7_dropdown-link-list {
    grid-column-gap: 0;
    grid-row-gap: 1rem;
    grid-template-rows: max-content max-content;
    grid-template-columns: 1fr;
    grid-auto-rows: max-content;
    grid-auto-columns: 1fr;
    display: grid;
  }

  .navbar7_container {
    width: 100%;
    height: 100%;
    max-width: 80rem;
    justify-content: space-between;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
    display: flex;
  }

  .navbar7_bottom-bar-left {
    grid-column-gap: 2rem;
    grid-row-gap: 1rem;
    grid-template-rows: auto;
    grid-template-columns: max-content minmax(max-content, 1fr);
    grid-auto-columns: 1fr;
    display: flex;
    position: relative;
  }

  .navbar7_dropdown-content {
    width: 100%;
    display: flex;
  }

  .navbar7_icon-wrapper {
    flex: none;
  }

  .navbar7_dropdown-list.w--open {
    width: 100vw;
    max-width: 100%;
    background-color: #fff;
    border-bottom: 1px solid #000;
    padding-left: 2rem;
    padding-right: 2rem;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    overflow: hidden;
  }

  .navbar7_dropdown-content-left {
    grid-column-gap: 2rem;
    grid-row-gap: 0;
    flex: 1;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-auto-columns: 1fr;
    padding-top: 2rem;
    padding-bottom: 2rem;
    padding-left: 0;
    display: grid;
  }

  .navbar7_menu-right {
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr;
    grid-auto-columns: 1fr;
    align-items: center;
    display: flex;
  }

  .navbar7_menu-dropdown {
    position: static;
  }

  .navbar7_logo-link {
    grid-column-gap: 0.5rem;
    grid-row-gap: 0.5rem;
    padding-left: 0;
    display: flex;
    max-width: 10rem;
  }

  .navbar7_menu {
    flex: 1;
    justify-content: space-between;
    align-items: center;
    margin-left: 1.5rem;
    display: flex;
    position: static;
  }

  .navbar7_bottom-bar-background-layer {
    width: 200vw;
    background-color: var(--color-red--red100);
    position: absolute;
    top: 0;
    bottom: 0;
    left: -50vw;
    right: -50vw;
  }

  .navbar7_bottom-bar {
    width: 100%;
    max-width: 80rem;
    justify-content: space-between;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
    padding-top: 1rem;
    padding-bottom: 1rem;
    display: flex;
    position: relative;
  }

  .navbar7_component {
    width: 100%;
    height: 4.5rem;
    border-bottom: 1px solid var(--color-grayiron--grayiron400);
    background-color: var(--color--white);
    align-items: center;
    padding-left: 2rem;
    padding-right: 2rem;
    display: flex;
    position: -webkit-sticky;
    position: sticky;
    top: 0;
z-index: 1000;
  }

  .navbar7_logo {
    width: 10rem;
    object-fit: contain;
  }

  .navbar7_dropdown-toggle {
    grid-column-gap: 0.5rem;
    align-items: center;
    padding: 1.5rem 0.5rem;
    display: flex;
  }

  .navbar7_bottom-bar-right {
    grid-column-gap: 1.5rem;
    grid-row-gap: 1.5rem;
    display: flex;
    position: relative;
  }

  .navbar7_menu-button {
    padding: 0;
  }

  .navbar-dropdown8_component {
    z-index: 1;
    margin-left: 0;
    margin-right: 0;
  }

  .navbar-dropdown8_dropdown-toggle {
    grid-column-gap: 0.5rem;
    align-items: center;
    padding: 0.5rem;
    display: flex;
  }

  .navbar-dropdown8_dropdown-list.w--open {
    width: 20rem;
    background-color: var(--color--white);
    border: 1px solid #000;
    border-radius: 0.5rem;
    padding: 1.5rem;
    top: 4.5rem;
    right: -8.5rem;
  }

  .navbar-dropdown8_dropdown-wrapper {
    grid-column-gap: 0.5rem;
    grid-row-gap: 0.5rem;
    flex-direction: column;
    display: flex;
  }

  .navbar7_dropdown-link-list-wide {
    grid-column-gap: 2rem;
    grid-row-gap: 1rem;
    grid-template-rows: max-content max-content;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
    grid-auto-rows: max-content;
    grid-auto-columns: 1fr;
    display: grid;
  }

  .navbar7_container-dropdown {
    width: 100%;
    height: 100%;
    max-width: 80rem;
    justify-content: space-between;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
    display: flex;
  }

  .navbar7_dropdown-content-rims {
    grid-column-gap: 2rem;
    grid-row-gap: 0;
    flex: 1;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr 1fr;
    grid-auto-columns: 1fr;
    padding-top: 2rem;
    padding-bottom: 2rem;
    padding-left: 0;
    display: grid;
  }

  @media screen and (max-width: 991px) {

    .navbar7_dropdown-link-list {
      grid-column-gap: 2rem;
      grid-template-columns: 1fr 1fr;
    }

    .navbar7_container {
      grid-column-gap: 1rem;
      grid-row-gap: 1rem;
      grid-template-rows: auto;
      grid-template-columns: max-content 1fr max-content;
      grid-auto-columns: 1fr;
      justify-content: flex-start;
      display: grid;
    }

    .navbar7_bottom-bar-left {
      width: 100%;
      grid-column-gap: 2rem;
      grid-row-gap: 1rem;
      grid-template-rows: auto;
      grid-template-columns: 1fr 1fr 1fr;
      grid-auto-columns: 1fr;
      margin-bottom: 1rem;
      display: grid;
    }

    .navbar7_dropdown-content {
      flex-direction: column;
    }

    .navbar7_dropdown-list {
      position: relative;
      overflow: hidden;
    }

    .navbar7_dropdown-list.w--open {
      border-style: none;
      align-items: flex-start;
      padding: 0;
      position: relative;
      top: 0;
    }

    .navbar7_dropdown-content-left {
      grid-row-gap: 2rem;
      grid-template-columns: 1fr 1fr;
      align-content: start;
      align-items: start;
      padding-left: 0;
      padding-right: 0;
    }

    .navbar7_menu-right {
      grid-template-rows: auto auto;
      grid-template-columns: 1fr;
    }

    .navbar7_menu-dropdown {
      width: 100%;
    }

    .navbar7_menu {
      height: 100 dvh;
      background-color: var(--color--white);
      -webkit-text-fill-color: inherit;
      background-clip: border-box;
      border-bottom: 1px solid #000;
      align-items: flex-start;
      margin-left: 0;
      padding: 1rem 2rem 6.5rem;
      transition: height 0.5s;
      position: absolute;
      overflow: auto;
    }

    .navbar7_bottom-bar {
      flex-direction: column;
      margin-bottom: 1.5rem;
      padding: 1.5rem;
    }

    .navbar7_component {
      padding-left: 2rem;
      padding-right: 2rem;
    }
    .navbar7_dropdown-toggle {
      align-items: center;
      padding-top: 0.75rem;
      padding-bottom: 0.75rem;
      padding-left: 0;
      font-size: 1.125rem;
      display: flex;
    }

    .navbar7_menu-button.w--open {
      background-color: rgba(0, 0, 0, 0);
    }

    .navbar-dropdown8_component {
      width: 100%;
      font-size: 1.125rem;
    }

    .navbar-dropdown8_dropdown-toggle {
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 0;
      display: flex;
    }

    .navbar-dropdown8_dropdown-list {
      position: static;
      overflow: hidden;
    }

    .navbar-dropdown8_dropdown-list.w--open {
      width: auto;
      border-style: none;
      padding: 0;
    }

    .navbar7_dropdown-content-rims {
      grid-row-gap: 2rem;
      grid-template-columns: 1fr 1fr;
      align-content: start;
      align-items: start;
      padding-left: 0;
      padding-right: 0;
    }
  }
  @media screen and (max-width: 767px) {

    .navbar7_container-dropdown {
      grid-column-gap: 1rem;
      grid-row-gap: 1rem;
      grid-template-rows: auto;
      grid-template-columns: 1fr;
      grid-auto-columns: 1fr;
      justify-content: flex-start;
      display: grid;
    }

    .navbar7_dropdown-link-list {
      max-width: none;
      grid-row-gap: 0.5rem;
      grid-template-columns: 1fr;
    }

    .navbar7_container {
      grid-column-gap: 0.5rem;
      grid-row-gap: 0.5rem;
    }

    .navbar7_dropdown-content-left {
      grid-row-gap: 1.5rem;
      flex-direction: column;
      grid-template-rows: auto;
      grid-template-columns: 1fr;
      grid-auto-columns: 1fr;
    }

    .navbar7_menu {
      padding-bottom: 6rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .navbar7_component {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .navbar7_dropdown-link-list-wide {
      max-width: none;
      grid-row-gap: 0.5rem;
      grid-template-columns: 1fr 1fr;
    }

    .navbar7_container-dropdown {
      grid-column-gap: 0.5rem;
      grid-row-gap: 0.5rem;
    }

    .navbar7_dropdown-content-rims {
      grid-row-gap: 1.5rem;
      flex-direction: column;
      grid-template-rows: auto;
      grid-template-columns: 1fr;
      grid-auto-columns: 1fr;
    }
  }

  @media screen and (max-width: 479px) {

    .navbar7_dropdown-link {
      padding-left: 0;
    }

    .navbar7_bottom-bar-left {
      grid-template-rows: auto auto;
      grid-template-columns: max-content;
    }

    .navbar7_dropdown-content-left {
      grid-template-columns: 1fr;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    .navbar7_menu-right {
      grid-column-gap: 0.5rem;
      grid-row-gap: 0.5rem;
    }

    .navbar7_menu {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .navbar7_bottom-bar {
      align-items: flex-start;
    }

    .navbar7_component {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .navbar7_bottom-bar-right {
      width: 100%;
      flex-direction: column;
    }

    .navbar7_dropdown-link-list-wide {
      grid-template-columns: 1fr;
    }

    .navbar7_dropdown-content-rims {
      grid-template-columns: 1fr;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
  }

{% endstylesheet %}