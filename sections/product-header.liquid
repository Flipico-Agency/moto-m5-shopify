                            </div>
                            <div>
                                <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Model</p>
                                <p class="text-size-tiny text-weight-semibold text-color-black">{{ product.metafields.tires.model.value.model.value }}</p>
                            </div>
                            <div>
                                <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Bieżnik</p>
                                <p class="text-size-tiny text-weight-semibold text-color-black">{{ product.metafields.tires.tread }}</p>
                            </div>
                            <div>
                                <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Klasa</p>
                                <p class="text-size-tiny text-weight-semibold text-color-black">{{ product.metafields.tires.class }}</p>
                            </div>
                            <div>
                                <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Rocznik</p>
                                <p class="text-size-tiny text-weight-semibold text-color-black">{{ product.metafields.tires.years | remove: '"' | remove: '[' | remove: ']' | split: ',' | join: ' | ' | strip }}</p>
                            </div>
                            <div>
                                <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Informacje dodatkowe</p>
                                {% assign additional_info = product.metafields.tires.additional_information %}
