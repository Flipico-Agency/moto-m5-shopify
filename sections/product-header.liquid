            <div class="product-header_component">
                <div class="product-header_tittle">
                    {% if product.metafields.tires.season.value == 'Letnie' %}
                        <img src="{{ 'IcRoundSun.svg' | asset_url }}" class="icon-embed-medium">
                    {% elsif product.metafields.tires.season.value == 'Zimowe' %}
                        <img src="{{ 'IcRoundWinter.svg' | asset_url }}" class="icon-embed-medium">
                    {% elsif product.metafields.tires.season.value == 'Całoroczne' %}
                        <img src="{{ 'IcRoundAllSeason.svg' | asset_url }}" class="icon-embed-medium">
                    {% endif %}
                    <h1 class="heading-style-h3">
                        {% if product.collections[0].handle == 'opony' %}
                            {{ product.metafields.tires.model.value.model.value }}<span class="text-weight-normal">
                            {{ product.metafields.tires.width | remove: '"' | remove: '[' | remove: ']' }}/{{ product.metafields.tires.profile | remove: '"' | remove: '[' | remove: ']' }}
                            R{{ product.metafields.tires.diameter | remove: '"' | remove: '[' | remove: ']' }} {{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }}{{ product.metafields.tires.speed_index | slice: 0 }}</span>
                        {% elsif product.collections[0].handle == 'felgi' %}
                            {{ product.metafields.rims.model.value.model.value }}<span class="text-weight-normal">
                            {{ product.metafields.rims.width | remove: '"' | remove: '[' | remove: ']' }}
                            x{{ product.metafields.rims.diameter | remove: '"' | remove: '[' | remove: ']' }} {{ product.metafields.rims.bolt_spacing }}
                            ET {{ product.metafields.rims.e_t | remove: '"' | remove: '[' | remove: ']' }}</span>
                        {% elsif product.collections[0].handle == 'kola' or product.collections[0].handle == 'akcesoria' or product.collections[0].handle == 'kola-dojazdowe' %}
                            {{ product.title }}
                        {% endif %}
                    </h1>
                </div>
                <div class="product-header_manufacturer-logo" {% if product.collections[0].handle == 'akcesoria' or product.collections[0].handle == 'kola-dojazdowe' %} style="visibility: hidden" {% endif %}>
                    {% if product.collections[0].handle == 'opony' %}
                        <img src="{{ product.metafields.tires.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="tire manufacturer logo">
                    {% elsif product.collections[0].handle == 'felgi' %}
                        <img src="{{ product.metafields.rims.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="rims manufacturer logo">
                    {% elsif product.collections[0].handle == 'kola' %}
