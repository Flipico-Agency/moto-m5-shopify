<div class="padding-global">
    <div class="container-large">
        <div class="padding-section-medium">
            <div class="product-header_component">
                <div class="product-header_tittle">
                    {% if product.metafields.tires.season.value == 'Letnie' %}
                        <img src="{{ 'IcRoundSun.svg' | asset_url }}" class="icon-embed-medium">
                    {% elsif product.metafields.tires.season.value == 'Zimowe' %}
                        <img src="{{ 'IcRoundWinter.svg' | asset_url }}" class="icon-embed-medium">
                    {% elsif product.metafields.tires.season.value == 'Całoroczne' %}
                        <img src="{{ 'IcRoundAllSeason.svg' | asset_url }}" class="icon-embed-medium">
                    {% endif %}

                    {% comment %} Tires main parameters {% endcomment %}
                    {% assign tires_width = product.metafields.tires.width | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign tires_profile = product.metafields.tires.profile | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign tires_diameter = product.metafields.tires.diameter | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign tires_speed_index = product.metafields.tires.speed_index | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign tires_load_index = product.metafields.tires.load_index | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}

                    {% comment %} Rims main parameters {% endcomment %}
                    {% assign rims_diameter = product.metafields.rims.diameter | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign rims_e_t = product.metafields.rims.e_t | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign rims_width = product.metafields.rims.width | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}

                    {% assign producer_serial_number = product.metafields.custom.producer_serial_number | remove: '"' | remove: '[' | remove: ']' | strip | split: ',' %}
                    {% assign vehicle_type = product.metafields.custom.type %}

                    {% comment %} Two different tires? {% endcomment %}
                    {% capture double_parameters_tires %}{% if tires_width.size > 1 or tires_profile.size > 1 or tires_diameter.size > 1 %}true{% else %}false{% endif %}{% endcapture %}
                    {% comment %}{{ double_parameters_tires }}{% endcomment %}

                    {% comment %} Two different rims? {% endcomment %}
                    {% capture double_parameters_rims %}{% if rims_diameter.size > 1 or rims_e_t.size > 1 or rims_width.size > 1 %}true{% else %}false{% endif %}{% endcapture %}
                    {% comment %}{{ double_parameters_rims }}{% endcomment %}

                    <h1 class="heading-style-h4">
                        {% if product.collections[0].handle == 'opony' %}
                            {% comment %} 1st proper version {% endcomment %}
                            {% comment %}
                            {{ product.metafields.custom.quantity | slice: 0 }}x {{ product.metafields.tires.manufacturer.value.name.value }} {{ product.metafields.tires.model.value.model.value }}
                            <span class="text-weight-normal">
                                 {% if double_parameters_tires == 'true' %}
                                     2x {{ tires_width[0] }}/{{ tires_profile[0] }} R{{ tires_diameter[0] }},
                                     2x
                                     {% if tires_width[1] == blank %}{{ tires_width[0] }}{% else %}{{ tires_width[1] }}{% endif %}/{% if tires_profile[1] == blank %}{{ tires_profile[0] }}{% else %}{{ tires_profile[1] }}{% endif %} R{% if tires_diameter[1] == blank %}{{ tires_diameter[0] }}{% else %}{{ tires_diameter[1] }}{% endif %}
                                     {% comment %}{{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }} {{ product.metafields.tires.speed_index | slice: 0 }}{% endcomment %}
                                 {% else %}
                                     {{ tires_width[0] }}/{{ tires_profile[0] }} R{{ tires_diameter[0] }}
                                     {% comment %}{{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }}{{ product.metafields.tires.speed_index | slice: 0 }}{% endcomment %}
                                 {% endif %}
                            </span>
                            {% endcomment %}
                            {% comment %} Second version {% endcomment %}
                            {% comment %}
                            <span class="text-weight-normal">
                                Opony {{ product.metafields.tires.season.value | downcase }}
                                 {% if double_parameters_tires == 'true' %}
                                     {{ tires_width[0] }}/{{ tires_profile[0] }}R{{ tires_diameter[0] }}{% if vehicle_type == 'Dostawcze' or 'Ciężarowe' %}C{% endif %} {{ tires_load_index[0] | slice: 0, 3 | rstrip }}{{ tires_speed_index[0] | slice: 0 }}
                                     ({% if tires_width[1] == blank %}{{ tires_width[0] }}{% else %}{{ tires_width[1] }}{% endif %}/{% if tires_profile[1] == blank %}{{ tires_profile[0] }}{% else %}{{ tires_profile[1] }}{% endif %} R{% if tires_diameter[1] == blank %}{{ tires_diameter[0] }}{% else %}{{ tires_diameter[1] }}{% endif %})
                                 {% else %}
                                     {{ tires_width[0] }}/{{ tires_profile[0] }}R{{ tires_diameter[0] }}{% if vehicle_type == 'Dostawcze' or 'Ciężarowe' %}C{% endif %} {{ tires_load_index[0] | slice: 0, 3 | rstrip }}{{ tires_speed_index[0] | slice: 0 }}
                                     {% comment %}{{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }}{{ product.metafields.tires.speed_index | slice: 0 }}{% endcomment %}
                                 {% endif %}
                            </span>
                            {% endcomment %}
                            {{ product.title }}
                        {% elsif product.collections[0].handle == 'felgi' %}
                            {% comment %} 1st proper version {% endcomment %}
                            {% comment %}
                            {{ product.metafields.custom.quantity | slice: 0 }}x {{ product.metafields.rims.manufacturer.value.name.value }} {{ product.metafields.rims.model.value.model.value }}
                            <span class="text-weight-normal">
                                {% if double_parameters_rims == 'true' %}
                                    2x R{{ rims_diameter[0] }}x{{ rims_width[0] }}J ET{{ rims_e_t[0] }},
                                    2x
                                    R{% if rims_diameter[1] == blank %}{{ rims_diameter[0] }}{% else %}{{ rims_diameter[1] }}{% endif %}x{% if rims_width[1] == blank %}{{ rims_width[0] }}{% else %}{{ rims_width[1] }}{% endif %} ET{% if rims_e_t[1] == blank %}{{ rims_e_t[0] }}{% else %}{{ rims_e_t[1] }}{% endif %}
                                {% else %}
                                    R{{ rims_diameter[0] }}x{{ rims_width[0] }}J ET{{ rims_e_t[0] }}
                                {% endif %}
                            </span>
                            {% endcomment %}
                            {{ product.title }}
                        {% elsif product.collections[0].handle == 'kola' or product.collections[0].handle == 'akcesoria' or product.collections[0].handle == 'kola-dojazdowe' %}
                            {{ product.title }}
                        {% endif %}
                    </h1>
                </div>
                {% comment %}<div class="product-header_manufacturer-logo" {% if product.collections[0].handle == 'akcesoria' or product.collections[0].handle == 'kola-dojazdowe' %} style="visibility: hidden" {% endif %}>{% endcomment %}
                <div style="visibility: hidden">
                    {% comment %}
                    {% if product.collections[0].handle == 'opony' %}
                        <img src="{{ product.metafields.tires.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="tire manufacturer logo">
                    {% elsif product.collections[0].handle == 'felgi' %}
                        <img src="{{ product.metafields.rims.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="rims manufacturer logo">
                    {% elsif product.collections[0].handle == 'kola' %}
                        <img src="{{ product.metafields.tires.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="tire manufacturer logo">
                        <img src="{{ product.metafields.rims.manufacturer.value.logo.value | image_url: width: 400 }}"
                             class="product-header_tittle-image" alt="rims manufacturer logo">
                    {% endif %}
                    {% endcomment %}
                </div>
                <div class="product-header_gallery">
                    <div class="product-header_gallery_main-image_wrapper">
                        {% if product.featured_image %}
                            <a data-fancybox="gallery" href="{{ product.featured_image | image_url: height: 1000 }}">
                                {{ product.featured_image | image_url: height: 1000 | image_tag: class: 'product-header_gallery_main-image' }}
                            </a>
                        {% else %}
                            {% if product.collections[0].handle == 'opony' %}
                                <a data-fancybox="gallery" href="{{ product.metafields.tires.model.value.zdjecie.value | image_url: height: 1000 }}">
                                    {{ product.metafields.tires.model.value.zdjecie.value | image_url: height: 1000 | image_tag: class: 'product-header_gallery_main-image' }}
                                </a>
                            {% endif %}
                            {% if product.collections[0].handle == 'felgi' %}
                                <a data-fancybox="gallery" href="{{ product.metafields.rims.model.value.zdjecie.value | image_url: height: 1000 }}">
                                    {{ product.metafields.rims.model.value.zdjecie.value | image_url: height: 1000 | image_tag: class: 'product-header_gallery_main-image' }}
                                </a>
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="product-header_gallery-images_wrapper">
                        {% for image in product.images %}
                            <div class="product-header_gallery-image-wrapper">
                                <a data-fancybox="gallery" href="{{ image | image_url: height: 1000 }}">
                                    <img class="product-header_gallery-image" src="{{ image | image_url: height: 200 }}" alt="gallery-image">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
