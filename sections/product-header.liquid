                            <div class="product-header_info-bottom_item-wrapper" id="modal-open-guarantee">
                                <div class="product-header_info-bottom_item">
                                    <img src="{{ 'IcRoundShield.svg' | asset_url }}" class="icon-embed-xxsmall">
                                    <div class="text-size-small">Gwarancja</div>
                                </div>
                                <div class="icon-embed-xsmall"><img src="{{ 'IcArrowSmallRight.svg' | asset_url }}"/>
                                </div>
                            </div>
                            <div class="modal_component" id="modal-component-guarantee">
                                <div class="modal_content-wrapper">
                                    <div class="modal_close-button" id="modal-close-guarantee"><img
                                                src="{{ 'IcRoundCloseRed.svg' | asset_url }}" class="icon-embed-small">
                                    </div>
                                    <div class="margin-bottom margin-large">
                                        <div class="margin-bottom margin-xsmall">
                                            <h4>Gwarancja</h4>
                                        </div>
                                        <div class="guarantee-content-green">
                                            <p class="text-weight-bold text-color-green">Dożywotnia gwarancja na
