                                </div>
                                <div class="modal_background-overlay" id="modal-background-guarantee"></div>
                            </div>
                        {% endif %}

                        {% comment %} PAYMENTS BUTTON AND MODAL {% endcomment %}
                        <div class="product-header_info-bottom_item-wrapper" id="modal-open-payments">
                            <div class="product-header_info-bottom_item">
                                <img src="{{ 'IcRoundPayments.svg' | asset_url }}" class="icon-embed-xxsmall">
                                <div class="text-size-small">Formy płatności</div>
                            </div>
                            <div class="icon-embed-xsmall"><img src="{{ 'IcArrowSmallRight.svg' | asset_url }}"/></div>
                        </div>
                        <div class="modal_component" id="modal-component-payments">
                            <div class="modal_content-wrapper">
                                <div class="modal_close-button" id="modal-close-payments"><img
                                            src="{{ 'IcRoundCloseRed.svg' | asset_url }}" class="icon-embed-small">
                                </div>
                                <div class="margin-bottom margin-large">
                                    <div class="margin-bottom margin-xsmall">
                                        <h4>Dostępne metody płatności</h4>
                                    </div>
                                </div>
                                {% render 'payments' %}
                            </div>
                            <div class="modal_background-overlay" id="modal-background-payments"></div>
                        </div>
                    </div>
                </div>
                <div class="product-header_buy">
                    <div class="heading-style-h4 text-color-red600">{{ product.price | money }}
                        <span class="text-size-regular">/ {{ product.metafields.custom.quantity }}</span>
                    </div>
                    <div class="text-size-tiny text-weight-semibold text-color-green">Darmowa Dostawa</div>
                    <div class="product-buy_divider"></div>
                    <div class="text-size-small text-weight-bold text-color-green">
                        Zamów przed {{ settings.delivery-hour }} - wyślemy dzisiaj
                    </div>
                    {% if product.available %}
                        <form
                                method="post"
                                action="/cart/add"
                                enctype="multipart/form-data"
                                class="margin-top margin-xsmall">
                            <input
                                    type="hidden"
                                    name="id[]"
                                    value="{{ product.variants.first.id }}"/>
                            <input
                                    type="hidden"
                                    min="1"
                                    name="quantity[]"
                                    value="1"/>

                            <div class="button-group-add-with-size">
                                {% if product.collections[0].handle == 'opony' %}
                                    <select id="size-selector" class="form-select_size">
                                        <option selected="selected">{{ product.metafields.custom.quantity | slice: 0 }}
                                            x {{ product.metafields.tires.width | remove: '"' | remove: '[' | remove: ']' | strip }}
                                            /{{ product.metafields.tires.profile | remove: '"' | remove: '[' | remove: ']' | strip }}
                                            R{{ product.metafields.tires.diameter | remove: '"' | remove: '[' | remove: ']' | strip }} {{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }}{{ product.metafields.tires.speed_index | slice: 0 }}</option>
                                        {% assign model_name = product.metafields.tires.model.value.model.value %}
                                        {% assign model_url = product.url %}
                                        {% for product in collections.opony.products %}
                                            {% assign product_model = product.metafields.tires.model.value.model %}
                                            {% if product_model == model_name and model_url != product.url %}
                                                <option value="{{ product.url }}">{{ product.metafields.custom.quantity | slice: 0 }}
                                                    x {{ product.metafields.tires.width | remove: '"' | remove: '[' | remove: ']' | strip }}
                                                    /{{ product.metafields.tires.profile | remove: '"' | remove: '[' | remove: ']' | strip }}
                                                    R{{ product.metafields.tires.diameter | remove: '"' | remove: '[' | remove: ']' | strip }} {{ product.metafields.tires.load_index | slice: 0, 3 | rstrip }}{{ product.metafields.tires.speed_index | slice: 0 }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                {% endif %}
                                <input
                                        type="submit"
                                        value="Dodaj do koszyka"
                                        class="button is-small is-add-to-cart"/>
                            </div>

                            {% if product.collections[0].handle == 'opony' %}
                                {% render 'tire-help' %}
                            {% endif %}

                            {% assign accesories_list = product.metafields.tires.accesories.value %}
                            {% if accesories_list %}
                                <div class="product-accesories-wrapper">
                                    <div class="product-accesories-tittle">
                                        <div class="text-size-tiny text-weight-medium">Kup przy okazji</div>
                                        <a href="{{ collections.akcesoria.url }}" class="text-size-tiny text-weight-semibold">Więcej akcesoriów</a>
                                    </div>
                                    {% for accesories in accesories_list %}
                                        <label class="form-checkbox-green">
                                            <input type="checkbox" class="form-checkbox-icon-green" name="id[]" value="{{ accesories.variants.first.id }}">
                                            {{ accesories.featured_image | image_url: height: 128 | image_tag: class: 'product-accesories-image' }}
                                            <div class="product-accesories_tittle-wrapper">
                                                <div class="text-size-small text-weight-medium">{{ accesories.title }}</div>
                                                <div class="text-size-small text-weight-semibold text-color-red600">{{ accesories.price | money }}</div>
                                            </div>
                                        </label>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </form>
                    {% else %}
                        <div class="button is-secondary max-width-full">Produkt niedostępny</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

