                                    {% assign additional_info_list = additional_info | split: ',' %}
                                    <p class="text-size-tiny text-weight-semibold text-color-black">
                                        {% for item in additional_info_list %}
                                            {{ item | remove: '"' | remove: '[' | remove: ']' | strip }}{% if forloop.last == false %}<br>{% endif %}
                                        {% endfor %}
                                    </p>
                                {% else %}
                                    <p class="text-size-tiny text-weight-semibold text-color-black">Brak dodatkowych informacji</p>
                                {% endif %}
                            </div>
                            {% comment %}
                            {% assign producer_serial_number = product.metafields.custom.producer_serial_number %}
                            {% if producer_serial_number != blank %}
                                <div>
                                    <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Numer seryjny producenta</p>
                                    <p class="text-size-tiny text-weight-semibold text-color-black">{{ producer_serial_number }}</p>
                                </div>
                            {% endif %}
                            {% endcomment %}
                        {% elsif collection_handle == 'felgi' %}
                            {% if double_parameters_rims == 'true' %}
                                <div>
                                    <p class="text-size-tiny text-weight-semibold text-color-grayiron600">Przód</p>
                                    <p class="text-size-tiny text-weight-semibold text-color-black">Średnica: {{ rims_diameter[0] }}</p>
                                    <p class="text-size-tiny text-weight-semibold text-color-black">ET: {{ rims_e_t[0] }}</p>
                                    <p class="text-size-tiny text-weight-semibold text-color-black">Szerokość: {{ rims_width[0] }}</p>
