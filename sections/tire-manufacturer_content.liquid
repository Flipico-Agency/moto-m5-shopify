                    {% assign recommended_metaobject = shop.metaobjects.modele_opon[id] %}
                    {% if recommended_metaobject %}
                      <!-- Tutaj wyświetlasz potrzebne dane z recommended_metaobject, na przykład: -->
                      <p>{{ recommended_metaobject.model }}</p>
                      <!-- Dodaj więcej pól z recommended_metaobject, które chcesz wyświetlić -->
                    {% endif %}
                  {% endfor %}
