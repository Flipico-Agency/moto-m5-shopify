.section-cart {
  background-color: var(--color-grayiron--grayiron100);
}

.cart-wrapper {
  grid-column-gap: 1rem;
  grid-row-gap: 1rem;
  grid-template-rows: auto;
  grid-template-columns: 1fr 1fr 1fr;
  grid-auto-columns: 1fr;
  display: grid;
}

.white-container-border {
  border: 1px solid var(--color-grayiron--grayiron200);
  background-color: var(--color--white);
  border-radius: 0.5rem;
  padding: 1rem;
}

.cart-column {
  flex-flow: column;
  display: flex;
}

.cart-column-left {
  grid-area: span 1 / span 2 / span 1 / span 2;
}

.cart_product-title {
  color: var(--color--black);
  text-decoration: none;
}

.cart_heading-wrapper {
  border-bottom: 1px solid var(--color-grayiron--grayiron200);
  margin-top: -.25rem;
  margin-left: -1rem;
  margin-right: -1rem;
  padding-bottom: .75rem;
  padding-left: 1rem;
  padding-right: 1rem;
}

.cart_product-list {
  grid-column-gap: 1rem;
  grid-row-gap: 1rem;
  flex-flow: column;
  margin-top: 1rem;
  display: flex;
}

.cart_product-wrapper {
  grid-column-gap: 16px;
  grid-row-gap: 16px;
  grid-template-rows: auto;
  grid-template-columns: max-content 1fr;
  grid-auto-columns: 1fr;
  display: grid;
  text-decoration: none;
}

.cart_product-photo {
  aspect-ratio: 1;
  object-fit: cover;
  border-radius: .25rem;
  width: 8rem;
  height: 8rem;
}

.cart_product-content {
  grid-column-gap: 1rem;
  grid-row-gap: 1rem;
  grid-template-rows: auto auto;
  grid-template-columns: 1fr max-content;
  grid-auto-columns: 1fr;
  grid-auto-flow: column;
  align-items: stretch;
  justify-items: stretch;
  padding-top: .5rem;
  padding-bottom: .5rem;
  display: grid;
  color: var(--color--black);
}

.cart_list {
  border-bottom: 1px solid var(--color-grayiron--grayiron200);
  margin-left: -1rem;
  margin-right: -1rem;
  padding: .5rem 1rem;
}

.cart_price-list {
  grid-column-gap: .75rem;
  grid-row-gap: .75rem;
  border-bottom: 1px solid var(--color-grayiron--grayiron200);
  flex-flow: column;
  margin-left: -1rem;
  margin-right: -1rem;
  padding: 1rem;
  display: flex;
}

.cart_price-item {
  justify-content: space-between;
  align-items: center;
  display: flex;
}

.cart_add-product-list {
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-auto-columns: 1fr;
    margin-top: 1rem;
    display: grid;
}

.cart_add-product {
  grid-column-gap: .5rem;
  grid-row-gap: .5rem;
  flex-flow: column;
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.cart_add-product_image-wrapper {
  order: -1; /* Ensure the image wrapper is at the top */
  width: 100%; /* Full width of the parent */
  padding-top: 100%; /* 1:1 aspect ratio */
  position: relative;
}

.cart_add-product_image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensures the image covers the box while maintaining aspect ratio */
}

.cart_add-product_price-wrapper {
  background-color: var(--color--white);
  border-radius: .25rem;
  padding: .25rem .5rem;
  position: absolute;
  bottom: .5rem;
  left: .5rem;
}

.cart_free-delivery {
  grid-column-gap: .5rem;
  grid-row-gap: .5rem;
  border: 1px solid var(--color-red--red600);
  background-color: var(--color-red--red100);
  border-radius: .5rem;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 1rem;
  padding: 1rem;
  display: flex;
}

.cart_empty {
  grid-column-gap: 1rem;
  grid-row-gap: 1rem;
  flex-flow: column;
  align-items: center;
  padding: 1rem;
  display: flex;
}

